<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toobar_height"
        >
        <TextView
            android:id="@+id/title"
            android:text="test"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="@dimen/big_size"
            android:gravity="center"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            />

    </android.support.v7.widget.Toolbar>

    <com.trustyapp.gridheaders.TrustyGridGridView
        android:layout_marginTop="@dimen/row_spaceing"
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@drawable/course_list_selector"
        android:numColumns="@integer/col_num"
        android:layout_weight="1"
        android:horizontalSpacing="5dp"
        android:layout_marginLeft="@dimen/row_spaceing"
        android:layout_marginEnd="@dimen/row_spaceing"
        android:layout_marginStart="@dimen/row_spaceing"
        android:layout_marginRight="@dimen/row_spaceing"
        android:verticalSpacing="@dimen/row_spaceing"/>

    <include
        android:id="@+id/bottom_layout"
        layout="@layout/bottom_controls"
        />

</LinearLayout>
