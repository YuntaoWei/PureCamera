<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/photopage_tool_bar"
    android:background="@color/photopage_toolbar_color"
    android:orientation="horizontal"
    android:elevation="@dimen/bottom_menu_elevation"
    android:layout_gravity="bottom"
    android:gravity="center_vertical"
    android:id="@+id/bottom_view"
    >

    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/smaller_front_size"
        android:drawableTop="@mipmap/ic_share"
        android:gravity="center"
        android:background="@null"
        android:text="@string/share"
        android:layout_marginLeft="@dimen/bottom_menu_margin"
        android:textColor="@color/bottom_menu_color_white"
        />
    <Button
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/smaller_front_size"
        android:drawableTop="@mipmap/ic_edit"
        android:gravity="center"
        android:background="@null"
        android:text="@string/edit"
        android:textColor="@color/bottom_menu_color_white"
        />
    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/smaller_front_size"
        android:drawableTop="@mipmap/ic_delete"
        android:gravity="center"
        android:background="@null"
        android:text="@string/delete"
        android:textColor="@color/bottom_menu_color_white"
        />
    <Button
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/smaller_front_size"
        android:drawableTop="@mipmap/ic_more"
        android:gravity="center"
        android:background="@null"
        android:text="@string/more"
        android:layout_marginRight="@dimen/bottom_menu_margin"
        android:textColor="@color/bottom_menu_color_white"
        />

</LinearLayout>