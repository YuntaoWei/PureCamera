<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <SeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        />


    <HorizontalScrollView
        android:id="@+id/filtersSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:scrollbars="none"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/filtersList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/filterWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="美白"
                android:visibility="gone"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="灰色"
                android:gravity="center_horizontal"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterMosatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="马赛克"
                android:gravity="center_horizontal"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterLOMO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="LOMO"
                android:gravity="center_horizontal"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterNostalgic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="怀旧"
                android:gravity="center_horizontal"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterComics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="漫画"
                android:gravity="center_horizontal"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterBlackWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="黑白"
                android:visibility="gone"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterNegative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="底片"
                android:visibility="gone"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterBrown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="褐色"
                android:gravity="center_horizontal"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterSketchPencil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="铅笔画"
                android:gravity="center_horizontal"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterOverExposure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="过度曝光"
                android:visibility="gone"
                android:textColor="#ADADAD" />

            <!--  -->

            <TextView
                android:id="@+id/filterSoftness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="柔化"
                android:visibility="gone"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterNiHong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="霓虹"
                android:visibility="visible"
                android:textColor="#ADADAD" />

            <TextView
                android:id="@+id/filterSketch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawableTop="@drawable/icon_auto"
                android:text="素描"
                android:visibility="gone"
                android:textColor="#ADADAD" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <Button
            android:id="@+id/cancel"
            android:background="@drawable/close_white_n"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/revocation"
            android:background="@drawable/revocation_white_n"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/cancel_revocation"
            android:background="@drawable/cacel_revocation_white_n"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/save"
            android:background="@drawable/save_white_n"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

</LinearLayout>
